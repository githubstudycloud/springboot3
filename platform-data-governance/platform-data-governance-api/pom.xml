        <version>1.0.0-SNAPSHOT</version>
    </parent>
    
    <artifactId>platform-data-governance-api</artifactId>
    <n>Platform Data Governance API</n>
    <description>API and integration module for data governance</description>
    
    <dependencies>
        <!-- Module Dependencies -->
        <dependency>
            <groupId>com.example.platform</groupId>
            <artifactId>platform-data-governance-core</artifactId>
        </dependency>
        <dependency>
            <groupId>com.example.platform</groupId>
            <artifactId>platform-data-governance-metadata</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.example.platform</groupId>
            <artifactId>platform-data-governance-standard</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.example.platform</groupId>
            <artifactId>platform-data-governance-quality</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.example.platform</groupId>
            <artifactId>platform-data-governance-cleansing</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.example.platform</groupId>
            <artifactId>platform-data-governance-lineage</artifactId>
            <version>${project.version}</version>
        </dependency>
        
        <!-- Platform Dependencies -->
        <dependency>
            <groupId>com.example.platform</groupId>
            <artifactId>platform-collect</artifactId>
        </dependency>
        <dependency>
            <groupId>com.example.platform</groupId>
            <artifactId>platform-scheduler</artifactId>
        </dependency>
        
        <!-- Spring Boot -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-validation</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-actuator</artifactId>
        </dependency>
        
        <!-- Springdoc OpenAPI -->
        <dependency>
            <groupId>org.springdoc</groupId>
            <artifactId>springdoc-openapi-starter-webmvc-ui</artifactId>
            <version>2.0.2</version>
        </dependency>
        
        <!-- Utilities -->
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
        </dependency>
        
        <!-- Testing -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>
    
    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>
</project>
